#!/bin/bash

# Script to start Kubernetes cluster using Minikube and verify setup

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube not found. Please install Minikube first."
    exit 1
fi

echo "ğŸš€ Starting Minikube cluster..."
minikube start

if [ $? -ne 0 ]; then
    echo "âŒ Failed to start Minikube."
    exit 1
fi

echo "âœ… Minikube started successfully."

echo "ğŸ” Verifying cluster status with kubectl..."
kubectl cluster-info

if [ $? -ne 0 ]; then
    echo "âŒ kubectl failed to get cluster info."
    exit 1
fi

echo "âœ… Cluster is running."

echo "ğŸ“¦ Retrieving available pods (in all namespaces)..."
kubectl get pods --all-namespaces

echo "âœ… Script completed successfully."
