pipeline {
    agent any

    tools {
        python 'python3' // This ensures Python 3 is used if configured globally
    }

    stages {
        stage('Checkout Source Code') {
            steps {
                script {
                    // Jenkins automatically checks out the repo. We just need to move into the 'messaging_app' directory.
                    dir('messaging_app') {
                        echo 'Changed directory to messaging_app'
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    dir('messaging_app') { // Execute command within messaging_app
                        echo 'Installing Python dependencies...'
                        // 'pip' here will use the Python associated with the 'python3' tool
                        sh 'pip install -r requirements.txt'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    dir('messaging_app') { // Execute command within messaging_app
                        echo 'Running tests with pytest...'
                        sh 'pytest --junitxml=test-results.xml --html=test-report.html --self-contained-html'
                    }
                }
            }
            post {
                always {
                    // Publish JUnit test results from messaging_app directory
                    dir('messaging_app') {
                        junit 'test-results.xml'
                    }
                }
            }
        }

        stage('Archive Test Report') {
            steps {
                script {
                    dir('messaging_app') { // Execute command within messaging_app
                        echo 'Archiving test report...'
                        archiveArtifacts artifacts: 'test-report.html', fingerprint: true
                    }
                }
            }
        }
    }
    // ... post section
}